#!/usr/bin/env node

const program = require('commander');
const pkg     = require('../package.json');

const ctl = program
    .version(pkg.version)
    .option('-v, --version', 'Show the formide-client version', function() {
        console.log(ctl.version);
    });

ctl
    .command('up')
    .action(function() {
        console.info('Starting formide-client...');
        // TODO
    });

ctl
    .command('init')
    .action(function() {
        console.info('Configuring formide-client...');
        // TODO
    });

ctl.parse(process.argv);